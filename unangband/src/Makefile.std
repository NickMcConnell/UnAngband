#
# Default target.
#
all: unangband


#
# Install the game.
#

install: unangband
	cp unangband ..


#
# Build the "Unangband" program
#

.PHONY : unangband debug

unangband:
	@$(MAKE) $(OBJS) CFLAGS="$(NORMAL_CFLAGS)"
	$(CC) $(NORMAL_CFLAGS) $(LDFLAGS) -o unangband $(OBJS) $(LIBS)

debug: 
	@$(MAKE) $(OBJS) CFLAGS="$(DEBUG_CFLAGS)"
	$(CC) $(DEBUG_CFLAGS) $(LDFLAGS) -o unangband $(OBJS) $(LIBS)

#
# Clean up old junk
#

clean:
	\rm -f *.o unangband


#
# Generate dependancies automatically
#

depend:
	makedepend -D__MAKEDEPEND__ $(SRCS)


#
# Hack -- some file dependencies
#

HDRS = \
  h-basic.h \
  h-define.h h-type.h h-system.h h-config.h

INCS = \
  angband.h \
  config.h defines.h types.h externs.h option.h \
  z-term.h z-rand.h z-util.h z-virt.h z-form.h $(HDRS)


%.o: %.c $(INCS)
	$(CC) $(CFLAGS) -o $@ -c $<

